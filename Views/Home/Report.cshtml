<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/index.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Expenses report</title>
</head>

<body>
    <div style="margin-top: 40px;">
        <div class="sub-heading">
            <h3>Expenses Report</h3>
            <a href="#form-divison"><button class="add-expense">Add Expense</button><br /></a>
        </div>
        <table id="report" class="expense-report">
            <thead>
                <tr>
                    <th>S.No</th>
                    <th>Description</th>
                    <th>Amount $</th>
                    <th>Paid By</th>
                    <th>Split Between</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <div class="form-div" id="expense-form-div">
        <form id="expense-form" class="expense-form">
            <h3 class="form-header">Add New Expense</h3>
            <label for="description">Description:</label>
            <input type="text" placeholder="Enter description" id="description" required><br />

            <label for="amount">Amount:</label>
            <input type="number" placeholder="Enter Amount" id="amount" required><br />

            <label for="paidBy">Paid By:</label>
            <input type="text" placeholder="Paid By" id="paidBy" required><br />

            <label for="splitBetween">Split Between (comma-separated):</label>
            <input type="text" placeholder="Enter Split Between" id="splitBetween" required><br />

            <label for="date">Date:</label>
            <input type="date" placeholder="Enter Date" id="date" required><br />

            <button type="submit" class="btn btn-info">Add Expense</button>
        </form>
    </div>

    <script src="~/js/index.js"></script>
</body>

</html>